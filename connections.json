{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "2017.09.01.0",
  "parameters": {
    "authorizationKey": {
      "type": "string",
      "metadata": {
        "description": "The authorizationKey."
      }
    },
    "connectionType": {
      "type": "string",
      "allowedValues": [
        "ExpressRoute",
        "IPsec",
        "VPNClient",
        "Vnet2Vnet"
      ],
      "metadata": {
        "description": "Gateway connection type. Possible values are: 'Ipsec','Vnet2Vnet','ExpressRoute', and 'VPNClient."
      }
    },
    "enableBgp": {
      "type": "bool",
      "metadata": {
        "description": "EnableBgp flag"
      }
    },
    "ipsecPolicies": {
      "type": "array",
      "metadata": {
        "description": "The IPSec Policies to be considered by this connection."
      }
    },
    "localNetworkGateway2": {
      "type": "string",
      "metadata": {
        "description": "The reference to local network gateway resource."
      }
    },
    "name": {
      "type": "string",
      "metadata": {
        "description": "Resource name."
      }
    },
    "peer": {
      "type": "string",
      "defaultValue": null,
      "metadata": {
        "description": "The reference to peerings resource."
      }
    },
    "routingWeight": {
      "type": "int",
      "metadata": {
        "description": "The routing weight."
      }
    },
    "sharedKey": {
      "type": "string",
      "metadata": {
        "description": "The IPSec shared key."
      }
    },
    "usePolicyBasedTrafficSelectors": {
      "type": "bool",
      "metadata": {
        "description": "Enable policy-based traffic selectors."
      }
    },
    "virtualNetworkGateway1": {
      "type": "string",
      "metadata": {
        "description": "The reference to virtual network gateway resource."
      }
    },
    "virtualNetworkGateway2": {
      "type": "string",
      "metadata": {
        "description": "The reference to virtual network gateway resource."
      }
    }
  },
  "variables": {
    "connection": {
      "apiVersion": "2015-06-15",
      "name": "[parameters('name')]",
      "type": "Microsoft.Network/connections",
      "location": "[resourceGroup().location]",
      "dependsOn": [ ],
      "properties": {
        "virtualNetworkGateway1": {
          "id": "[parameters('virtualNetworkGateway1')]"
        },
        "localNetworkGateway2": {
          "id": "[parameters('localNetworkGateway2')]"
        },
        "connectionType": "[parameters('connectionType')]",
        "routingWeight": "[parameters('routingWeight')]",
        "sharedKey": "[parameters('sharedKey')]"
      }
    }
  },
  "resources": [
  ],
  "outputs": {
    "connections": {
      "type": "object",
      "value": "[variables('connection')]"
    }
  }
}